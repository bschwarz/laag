{
  "name": "@laag/raml",
  "version": "1.0.2",
  "description": "TypeScript library for interfacing with RAML documents",
  "keywords": [
    "rest",
    "raml",
    "design",
    "typescript",
    "api"
  ],
  "author": "Brett Schwarz <brett.schwarz@gmail.com>",
  "homepage": "https://github.com/bschwarz/laag/tree/main/packages/raml",
  "license": "MIT",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "browser": "./dist/browser/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "browser": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/browser/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "directories": {
    "lib": "dist",
    "test": "__tests__"
  },
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bschwarz/laag.git",
    "directory": "packages/raml"
  },
  "scripts": {
    "build": "bun run build:clean && bun run build:esm && bun run build:cjs && bun run build:browser && bun run build:types && bun run build:post",
    "build:clean": "rm -rf dist",
    "build:esm": "bun build src/index.ts --outdir dist/esm --format esm --target node --external @laag/core",
    "build:cjs": "bun build src/index.ts --outdir dist/cjs --format cjs --target node --external @laag/core",
    "build:browser": "bun build src/index.ts --outdir dist/browser --format esm --target browser --minify --sourcemap --external @laag/core",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types --skipLibCheck --rootDir src",
    "build:post": "node scripts/post-build.js",
    "build:watch": "bun build src/index.ts --outdir dist/esm --format esm --target node --external @laag/core --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit --skipLibCheck",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "bun run build && bun run test && bun run type-check"
  },
  "bugs": {
    "url": "https://github.com/bschwarz/laag/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@laag/core": "workspace:*",
    "typescript": ">=4.5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@laag/core": "workspace:*",
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "path": "/Users/brettschwarz/repos/laag/packages/raml",
  "packageJsonPath": "/Users/brettschwarz/repos/laag/packages/raml/package.json",
  "directoryName": "raml"
}
